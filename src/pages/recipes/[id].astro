---
import Layout from "@/layouts/Layout.astro";
import { RecipeDetailsView } from "@/components/recipes/RecipeDetailsView";

// Get recipe ID from params
const { id } = Astro.params;

if (!id) {
  return Astro.redirect("/recipes");
}
---

<Layout title="Szczegóły przepisu - HealthyMeal">
  <main class="min-h-screen bg-background">
    <RecipeDetailsView client:load recipeId={id} />
  </main>
</Layout>
